.Chat-main__message__detail
  .Chat-main__message__detail__user-name
    = message.user.name
  .Chat-main__message__detail__update-time
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
.Chat-main__message__comment
  - if message.content.present?
    %p.Chat-main__message__comment__content
      = message.content
  = image_tag message.image.url, class: 'Message__image' if message.image.present?