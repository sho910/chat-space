.Chat-main
  .Chat-main__group
    .Chat-mai__group__detail
      %p.Chat-main__group__detail__groupName
        = @group.name
      .Chat-main__group__detail__member
        %p
          Memberï¼š
        %ul 
          - @group.users.each do |user|
            %li= user.name
    .Chat-main__group__edit
      = link_to "Edit", edit_group_path(@group)
  .Chat-main__message
    .Chat-main__message__detail
      = render @messages
  .Chat-main__footer
    = form_with model: [@group, @message], html: {class: "Form"}, local: true do |f|
      %div.Chat-main__footer__contents
        = f.text_field :content, class: 'Form__inputContent', placeholder: 'type a message'
        = f.label :image, class: 'Form__inputImage' do
          = icon('far', 'image', class: 'Form__icon')
          = f.file_field :image, class: 'Hidden'
      = f.submit 'Send', class: 'Form__submit'